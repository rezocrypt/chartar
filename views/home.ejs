<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->
<html>
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<style>
	body{
		background-color: rgba(0, 0, 0);
	}
	.user{
		margin-top: 1%;
		margin-bottom: 1%;
		margin-left: 2.5%;
		margin-right: 2.5%;
		width: 95% !important;
		opacity: 0.85;
		border-radius: 15px;
	}
	.card-title{
		font-size: 30px;
		font-weight: bold;
	}
	.card-image{
		margin-top: 10px;
		width: 100px;
		height: 100px;
		border-radius: 10px;
	}
	.btn{
		margin-left: 10px;
		margin-right: 10px;
		text-align: right;
	}
	#nothing-found-text{
		width: 80%;
		margin: auto;
		margin-top: 1%;
		border-radius: 10px;
		background-color: rgba(255, 0, 0, 0.5);
		padding-top: 10px;
		padding-bottom: 10px;
	}
	#no-found-text
	{
		font-size: 30px !important;
		color: white;
		text-align: center;
	}
	</style>
	<title>Ուսանողներ</title>
</head>
<body>
	<img src="bg.jpg" style="filter: brightness(0.5); position: absolute;top: 0;left: 0;width: 100%; height: 100%; object-fit: cover;opacity: 1 !important; z-index: -1 !important;" alt="" srcset="">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container-fluid">
		<a class="btn btn-success" href="/home" role="button">Թարմացնել</a>
		  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		  </button>
		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">
			  <li class="nav-item">
			  </li>
		</ul>
		<form action="/home" method="post" class="d-flex" style="margin-top: 15px;">
			<input class="form-control me-2" type="search" name="search" placeholder="Փնտրել" aria-label="Search" autofocus>
			<button class="btn btn-outline-success" type="submit">Փնտրել</button>
		</form>
		<a class="btn btn-danger" href="/logout" role="button">Դուրս գալ</a>
		<a class="btn btn-primary" href="/admin" role="button">Ադմինիստրատոր</a>
		  </div>
		</div>
	  </nav>

<% if (data.length == 0) { %>
	<div id="nothing-found-text">
		<h1 id="no-found-text">Ոչինչ չգտնվեց</h1>
	</div>
	<% } %>

	<% for(var i=0; i<data.length; i++) {%>
		
		<div class="card w-100 user">
			<div class="card-body">
			<h5 class="card-title"><%=data[i]["name"]%> <%=data[i]["surname"]%></h5>
			<img class="card-img-top card-image" src="<%= data[i]["profilepicture"] %>" alt="Card image cap">
			<p class="card-text" style="color: red; margin-top: 20px; margin-left: 5px; font-weight: bolder; font-size: 18px;"><%= data[i]["passport"] %></p>
			<a href="/student/<%= data[i]["id"] %>" class="btn btn-primary">Մանրամասն</a>
			<a href="/remove/<%= data[i]["id"] %>" class="btn btn-danger">Հեռացնել</a>
			<a href="/edit/<%= data[i]["id"] %>" class="btn btn-primary">Խմբագրել</a>
		</div>
	  </div>
	<% } %>

</body>
</html>

